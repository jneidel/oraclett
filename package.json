{
  "name": "oraclett",
  "repository": "jneidel/oraclett",
  "version": "0.0.0",
  "description": "Oracle time tracker",
  "author": {
    "name": "Jonathan Neidel",
    "email": "git@jneidel.com",
    "url": "https://jneidel.com"
  },
  "bin": {
    "oraclett": "./bin/run"
  },
  "scripts": {
    "start": "node dist/app.js",
    "test": "jest --coverage",
    "build": "tsc",
    "watch": "concurrently -k -n \"ðŸ”¨,ðŸš€\" \"npm run watch-build\" \"npm run watch-test\" --prefix name",
    "watch-build": "tsc -w",
    "watch-test": "jest --watch",
    "lint": "eslint --fix --ext .ts --parser-options \"{ 'ecmaVersion': 10, 'ecmaFeatures': { 'impliedStrict': true }, project: ./tsconfig.json }\" src",
    "pack": "npm run build && oclif manifest && oclif readme"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "license": "GPLv3",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@oclif/core": "^1.22.0",
    "@oclif/plugin-autocomplete": "^1.3.8",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.1.9",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.5",
    "sugar": "^2.0.6"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.5",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/sequelize": "^4.28.14",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "oclif": {
    "bin": "oraclett",
    "dirname": "oraclett",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ],
    "topics": {
      "plugins": {
        "hidden": true
      }
    },
    "topicSeparator": " ",
    "additionalHelpFlags": [
      "-h",
      "help"
    ],
    "additionalVersionFlags": [
      "-v",
      "-V",
      "version"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
